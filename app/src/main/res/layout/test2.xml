<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <SurfaceView
        android:id="@+id/surfaceView_land_ruler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SurfaceView
        android:id="@+id/surfaceView_land_tags"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextureView
        android:id="@+id/surfaceView_land"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/land_beat_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate/"
            android:textSize="50dp"
            android:fontFamily="monospace"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/land_rr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RR Intervals"
            android:textSize="25dp"
            android:fontFamily="monospace"
            android:textColor="@color/white_selected" />
    </LinearLayout>
</RelativeLayout>